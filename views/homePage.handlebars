<h1>Event RSVP Platform</h1>

{{#if userPresent}}
  <p>Welcome back, {{userName}}!</p>
  <a href="/user/logout">Log Out</a>
  <br>
  <a href="/event/createEvent">Create Event</a>
{{else}}
  <p>Please <a href="/user/login">Log In</a> or <a href="/user/register">Register</a></p>
{{/if}}
<br>
 <a href="/">Home Page</a>


<form action="/" method="POST" id="Event-Search">
  <label for="searchElement">Search:</label>
  <input type="text" name="searchElement" id="searchElement">
  {{#if userPresent}}
    <select name="eventFilter" id="eventFilter">
    <option value="all">All the Event</option>
    <option value="fav">Favorite Events</option>
    <option value="registered">Registered Event</option>
    <option value="created">Created Events</option>
  {{/if}}
  <input type="submit" value="Search" id="Search">
</form>

{{#if newPageName}}
<h2>{{newPageName}}</h2>
{{else}}
<h2>Upcoming Events</h2>
{{/if}}
{{#if eventList}}
  <ul>
    {{#each eventList}}
      <li>
        <article>
          <a href={{eventLink}}><h3>{{eventName}}</h3></a>
          <p>
            Start Time: {{formatDate startTime "YYYY-MM-DD hh:mm"}}<br>
            End Time: {{formatDate endTime "YYYY-MM-DD hh:mm"}}<br>
            Posted By: {{postedBy}}
          </p>
        </article>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>There are no upcoming events at this time.</p>
{{/if}}
